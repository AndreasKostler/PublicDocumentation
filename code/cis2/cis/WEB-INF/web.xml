<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http:/java.sun.com/dtd/web-app_2_3.dtd">

	<servlet>
		<servlet-name>openwcm</servlet-name>
		<display-name>openwcm</display-name>
		<servlet-class>openwcm.OpenWcmServlet</servlet-class>
		<load-on-startup>1</load-on-startup>

		<init-param>
			<param-name>conent_server_host</param-name>
			<param-value>db</param-value>
		</init-param>
		<init-param>
			<param-name>conent_server_port</param-name>
			<param-value>4444</param-value>
		</init-param>
		<!--
			'webapp_root', 'openwcm_servlet_name' and 'portal_host' are all used
			for the link prefix, that is what to prefix the embedded links with
			that come in the HTML that is returned from the WCM_PLACEHOLDER
			service.
		-->
		<init-param>
			<param-name>portal_host</param-name>
			<param-value>http://mac:8080</param-value>
		</init-param>
		<init-param>
			<param-name>webapp_root</param-name>
			<param-value>cis</param-value>
		</init-param>
		<init-param>
			<param-name>openwcm_servlet_name</param-name>
			<param-value>openwcm</param-value>
		</init-param>
		<!--
			If set to false you need to modify the servlet to extract the
			username from wherever it resides for your portal. You would modify
			the code in the method getContext(). Feel free to modify the
			parameters this method takes as it is only used inside this class
			(it's private!). Also if you set to false then 'testing_user'
			parameter is also not used. When set to true, the username in
			'testing_user' will be used to fetch images (and whatnot) embedded in
			the HTML returned. This is good for testing in the context of a
			simple container/setup like tomcat.
		-->
		<init-param>
			<param-name>testing</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>testing_user</param-name>
			<param-value>sysadmin</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>openwcm</servlet-name>
		<url-pattern>/openwcm/*</url-pattern>
	</servlet-mapping>
</web-app>
